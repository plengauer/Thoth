{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "automerge": true,
  "packageRules": [
     {
       "groupName": "opentelemetry-python monorepo",
       "matchPackagePatterns": [
         "^opentelemetry-"
       ],
       "matchManagers": [
         "pip_requirements",
       ],
       "ignoreUnstable": false
     }
  ]
}
