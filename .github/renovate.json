{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "configMigration": true,
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "automerge": true,
  "rebaseWhen": "conflicted",
  "packageRules": [
    {
      "groupName": "opentelemetry-python monorepo",
      "matchManagers": [
        "pip_requirements"
      ],
      "ignoreUnstable": false,
      "matchPackageNames": [
        "/^opentelemetry-/"
      ]
    }
  ]
}
