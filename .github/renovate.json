{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "configMigration": true,
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "automerge": true,
  "rebaseWhen": "conflicted",
  "packageRules": [
    {
      "groupName": "opentelemetry-python monorepo",
      "matchManagers": [
        "pip_requirements"
      ],
      "ignoreUnstable": false,
      "matchPackageNames": [
        "/^opentelemetry-/"
      ]
    }
  ],
  "customManagers": [
    {
      "manager": "regex",
      "fileMatch": ["^README\\.md$"],
      "matchStrings": ["plengauer/opentelemetry-github/actions/instrument/deploy@(?<currentValue>[\\w.-]+)"],
      "depNameTemplate": "plengauer/opentelemetry-github/actions/instrument/deploy",
      "datasourceTemplate": "github-tags"
    }
  ]
}
