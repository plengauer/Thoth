{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "mergeConfidence:all-badges"
  ],
  "configMigration": true,
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,  
  "automerge": true,
  "lockFileMaintenance": { "enabled": true },
  "packageRules": [
    {
      "groupName": "opentelemetry-python monorepo",
      "matchManagers": [
        "pip_requirements"
      ],
      "ignoreUnstable": false,
      "matchPackageNames": [
        "/^opentelemetry-/"
      ]
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "rangeStrategy": "pin",
      "matchPackageNames": [
        "/.*/"
      ]
    },
    {
      "description": "Use major.minor versioning for GitHub action examples in README",
      "matchManagers": [
        "regex"
      ],
      "matchPackageNames": [
        "plengauer/Thoth/actions/instrument/deploy",
        "plengauer/Thoth/actions/instrument/workflow",
        "plengauer/Thoth/actions/instrument/job"
      ],
      "extractVersion": "^v(?<version>\\d+\\.\\d+)",
      "versioning": "semver-coerced"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^README\\.md$/"
      ],
      "matchStrings": [
        "plengauer/Thoth/actions/instrument/deploy@(?<currentValue>[\\w.-]+)",
        "plengauer/opentelemetry-github/actions/instrument/deploy@(?<currentValue>[\\w.-]+)"
      ],
      "depNameTemplate": "plengauer/Thoth/actions/instrument/deploy",
      "datasourceTemplate": "github-tags"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^README\\.md$/"
      ],
      "matchStrings": [
        "plengauer/opentelemetry-github/actions/instrument/workflow@(?<currentValue>[\\w.-]+)"
      ],
      "depNameTemplate": "plengauer/Thoth/actions/instrument/workflow",
      "datasourceTemplate": "github-tags"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^README\\.md$/"
      ],
      "matchStrings": [
        "plengauer/opentelemetry-github/actions/instrument/job@(?<currentValue>[\\w.-]+)"
      ],
      "depNameTemplate": "plengauer/Thoth/actions/instrument/job",
      "datasourceTemplate": "github-tags"
    }
  ]
}
