. ./assert.sh
if [ "$(whoami)" = "root" ]; then
  echo "#!/bin/sh" > /usr/bin/fail_no_auto.shell
  cat auto/fail_no_auto.shell >> /usr/bin/fail_no_auto.shell
  chmod +x /usr/bin/fail_no_auto.shell
else
  sudo echo "#!/bin/sh" > /usr/bin/fail_no_auto.shell
  sudo cat auto/fail_no_auto.shell >> /usr/bin/fail_no_auto.shell
  sudo chmod +x /usr/bin/fail_no_auto.shell
fi
. /usr/bin/opentelemetry_shell.sh
fail_no_auto.shell
assert_equals 0 $?
span="$(resolve_span '.resource.attributes."process.command" == "sh /usr/bin/fail_no_auto.shell"')"
assert_equals "myspan" "$(\echo "$span" | jq -r '.name')"
assert_equals "SpanKind.INTERNAL" $(\echo "$span" | jq -r '.kind')
