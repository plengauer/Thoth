if ! which python3; then exit 0; fi
. ./assert.sh

. otel.sh

assert_equals "hello world" "$(echo 'print("hello world")' | python3)"

echo '
import requests
requests.get("http://www.example.com/foo")
' | python3

dir=$(mktemp -d)
python3 -m venv "$dir"/venv
"$dir"/venv/bin/activate
echo '
import requests
requests.get("http://www.example.com/bar")
' | python3
deactivate

dir=$(mktemp -d)
python3 -m venv "$dir"/venv
"$dir"/venv/bin/activate
pip3 install opentelemetry-distro opentelemetry-exporter-otlp
echo '
import requests
requests.get("http://www.example.com/baz")
' | opentelemetry-instrument python3
deactivate
