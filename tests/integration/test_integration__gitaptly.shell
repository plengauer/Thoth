if ! type sudo; then
  sudo() {
    "$@"
  }
fi

curl https://api.github.com/repos/plengauer/gitaptly/releases/latest | jq -r '.assets[].browser_download_url' | grep '.deb$' | xargs wget \
  && sudo apt-get install -y ./*.deb && sleep 5 \
  && curl http://127.0.0.1:8000/dists/stable/main/binary-all/Packages | grep '^Filename: ' | cut -d ' ' -f 2- | head -n1 | xargs -I {} wget http://127.0.0.1:8000/{} \
  || exit 1
